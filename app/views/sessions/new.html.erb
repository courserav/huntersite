<h1>Login</h1>

<% if flash[:error] %>
    <p><%= flash[:error] %></p>
<% end %>

<%= form_tag "/login" do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %><br>
    <%= label_tag :password %>
    <%= password_field_tag :password %><br>
    <%= submit_tag "Log In" %><br>
<% end %>

<%= link_to('Log in with Facebook', '/auth/facebook', method: :post) %>

