<% if @post.text? %>
    <%= @post.text %>
<% end %>

<% if @post.image.attached? %>
    <%= image_tag @post.image.variant(resize_and_pad: [100, 100]) %>
<% end %>
<br><br>

<%= link_to "Apraise Treasure - Add Comment", new_post_comment_path(@post) %><br>

<% if @post.comments %>
    <% @post.comments.each do |comment| %>
        <%= comment.show_author %> - <%= comment.content %><br>  
    <% end %>
<% end %>