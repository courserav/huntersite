<h1>Posted Treasures</h1>

<% @posts.each do |post| %>
    <%= link_to post.user.username, user_path(post.user) %>
    <% if post.text? %>
        <%= post.text %>
    <% end %>
    <% if post.image.attached? %>
        <%= image_tag post.image.variant(resize_and_pad: [100, 100]) %>
    <% end %>
    <%= link_to "View Post", user_post_path(post.user, post) %>
    <br><br>
<% end %>
